<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@id/imageView"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_margin="10dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="@dimen/radio_button_height"
                    android:layout_height="wrap_content"
                    android:text="@string/person_ic"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/colorPrimary"
                     />

                <TextView
                    android:id="@+id/Service_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_toEndOf="@+id/name"/>
            </RelativeLayout>

            <include layout="@layout/item_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="@dimen/radio_button_height"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile_ic"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/colorPrimary"
                     />

                <TextView
                    android:id="@+id/Service_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:layout_toEndOf="@+id/contact"/>
            </RelativeLayout>

            <include layout="@layout/item_divider"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >

                <TextView
                    android:id="@+id/Address"
                    android:layout_width="@dimen/radio_button_height"
                    android:layout_height="wrap_content"
                    android:text="@string/add_ic"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/colorPrimary"
                    />

                <TextView
                    android:id="@+id/Service_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:lines="3"
                    android:layout_toEndOf="@+id/Address"/>
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
    <include layout="@layout/item_divider" />


</LinearLayout>
