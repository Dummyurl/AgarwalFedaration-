        <TextView
            android:id="@+id/First"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layoutMarginBottom"
            android:layout_marginTop="@dimen/layoutMarginBottom"
            android:text="@string/First_Person"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#ff0000" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_R_Name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/TextInputLayoutMargin_top_bottom"
            android:layout_marginTop="@dimen/TextInputLayoutMargin_top_bottom">

            <EditText
                android:id="@+id/R_Name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="@string/Name"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_R_Address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/TextInputLayoutMargin_top_bottom"
            android:layout_marginTop="@dimen/TextInputLayoutMargin_top_bottom">

            <EditText
                android:id="@+id/R_Address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Address"
                android:inputType="textPostalAddress" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_R_City1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/TextInputLayoutMargin_top_bottom"
            android:layout_marginTop="@dimen/TextInputLayoutMargin_top_bottom">

            <EditText
                android:id="@+id/R_City1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="@string/City"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_R_Mobile1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/TextInputLayoutMargin_top_bottom"
            android:layout_marginTop="@dimen/TextInputLayoutMargin_top_bottom">

            <EditText
                android:id="@+id/R_Mobile1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="1234567890"
                android:hint="@string/Mobile_No"
                android:inputType="number"
                android:maxLength="10" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_R_Telephone1"
