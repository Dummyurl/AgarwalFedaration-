<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".matrimony.FormContactInformationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/frm_tv_cntctinfrmtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Contact Information"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/frm_per_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Number :-"
                android:layout_weight=".5"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/frm_d_per_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"
                android:inputType="number"
                android:maxLength="10"
                android:layout_weight=".5"
                android:layout_gravity="center"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/frm_per_landlin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Landline Number :-"
                android:layout_weight=".5"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/frm_d_per_landlnno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Landline Number"
                android:maxLength="15"
                android:inputType="number"
                android:layout_weight=".5"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/frm_per_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email :-"
                android:layout_weight=".5"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/frm_d_per_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Email"
                android:layout_weight=".5"
                android:inputType="textEmailAddress"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/frm_per_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight=".5"
                android:text="Address :-"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/frm_d_per_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="6"
                android:lines="3"
                android:scrollbars="vertical"
                android:hint="Enter Your Address"
                android:layout_weight=".5"
                android:layout_gravity="top|left"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/frm_per_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country :-"
                android:layout_weight=".5"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textStyle="bold" />
            <AutoCompleteTextView
                android:id="@+id/frm_d_per_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:inputType="textCapWords"
                android:hint="Enter County Here"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/frm_per_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State:-"
                android:layout_weight=".5"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textStyle="bold" />
            <AutoCompleteTextView
                android:id="@+id/frm_d_per_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:inputType="textCapWords"
                android:hint="Enter State Here"
                 />
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:weightSum="1">
        <TextView
            android:id="@+id/frm_per_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City :-"
            android:layout_weight=".5"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:textStyle="bold" />
        <AutoCompleteTextView
            android:id="@+id/frm_d_per_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:hint="Enter City Here"
            android:inputType="textCapWords"
            android:layout_gravity="center"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/frm_per_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pincode:-"
                android:layout_weight=".5"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/frm_d_per_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:digits="0123456789"
                android:hint="Enter Pincode"
                android:inputType="number"
                android:maxLength="6"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/frm_per_resdsts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Residential Status:-"
                android:layout_weight=".5"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/frm_d_per_ressts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:entries="@array/resident_status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="horizontal">
            <!-- <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/arrow_left_bold_circle_outline"
                android:layout_gravity="start"
                android:layout_weight=".5"
                android:onClick="goToFormBasicDetails"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>-->
            <Button
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/circleArrowButton"
                android:onClick="goToFormSocialAttribute"
                android:text="save and next"
                android:textColor="#fff"
                android:textStyle="bold" />
            <!-- <Button
                android:id="@+id/bnsaveupdate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_weight=".5"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@color/circleArrowButton"
                android:onClick="goToFormContactInformation"
                android:text="save update"
                android:visibility="gone"/>-->
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
   <!-- <ImageButton
        android:id="@+id/draggable_view"
        android:background="@drawable/home_icon"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>-->

</FrameLayout>
