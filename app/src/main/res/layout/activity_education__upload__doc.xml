            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:id="@+id/ten_ssc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/layoutMargin"
                    android:layout_weight="0.3"
                    android:hint="@string/SSC_Result" />

                <ImageView
                    android:id="@+id/ssc_Result"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_margin_three"
                    android:layout_weight="0.3"
                    android:adjustViewBounds="true"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/file_upload"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/browse_ssc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@color/colorPrimary"
                    android:text="@string/Browse" />

                <ImageView
                    android:id="@+id/ssc_btn_Result"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_margin_three"
                    android:layout_marginLeft="@dimen/layoutMargin"
                    android:layout_weight="0.4"
                    android:src="@drawable/file_upload"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layoutMarginBottom"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/twelve_hsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/layoutMargin"
                    android:layout_weight="0.3"
                    android:hint="@string/HSC_Result" />

                <ImageView
