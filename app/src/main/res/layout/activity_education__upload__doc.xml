                    android:text="@string/Browse" />

                <ImageView
                    android:id="@+id/post_grad_btn_Result"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_margin_three"
                    android:layout_marginLeft="@dimen/layoutMargin"
                    android:layout_weight="0.4"
                    android:src="@drawable/file_upload"
                    android:textColor="#fff" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layoutMarginBottom"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/other_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/layoutMargin"
                    android:layout_weight="0.3"
                    android:hint="@string/Passport" />

                <ImageView
                    android:id="@+id/other_Certificate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_margin_three"
                    android:layout_weight="0.3"
                    android:adjustViewBounds="true"
