<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin_top"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_succsstory"
                    android:layout_width="@dimen/profile_pic_width"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_succcsstories" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/successStoriesRowLay_mar_left"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/event_row_cardview_layout_mar_bottom"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/ssrl_grrom"
                            android:layout_width="@dimen/cont_us_logo_width"
                            android:layout_height="wrap_content"
                            android:text="@string/male_icon"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/successStoriesRowLay_textSize" />

                        <TextView
                            android:id="@+id/tv_goroomname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/ssrl_grrom"
                            android:textSize="@dimen/successStoriesRowLay_textSize" />
                    </RelativeLayout>


                    <include layout="@layout/item_divider1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/event_row_cardview_layout_mar_bottom"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/ssrl_bride"
                            android:layout_width="@dimen/cont_us_logo_width"
                            android:layout_height="wrap_content"
                            android:text="@string/female_icon"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/successStoriesRowLay_textSize" />

                        <TextView
                            android:id="@+id/bridename"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/ssrl_bride"
                            android:textSize="@dimen/successStoriesRowLay_textSize" />
                    </RelativeLayout>

                    <include layout="@layout/item_divider1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/event_row_cardview_layout_mar_bottom"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/ssrl_date"
                            android:layout_width="@dimen/cont_us_logo_width"
                            android:layout_height="wrap_content"
                            android:text="@string/calander_icon"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/successStoriesRowLay_textSize" />

                        <TextView
                            android:id="@+id/tv_mrrigdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/ssrl_date"
                            android:textSize="@dimen/successStoriesRowLay_textSize" />
                    </RelativeLayout>

                    <include layout="@layout/item_divider1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/event_row_cardview_layout_mar_bottom"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/ssrl_desc"
                            android:layout_width="@dimen/cont_us_logo_width"
                            android:layout_height="wrap_content"
                            android:text="@string/descrioption_icon"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/successStoriesRowLay_textSize" />

                        <TextView
                            android:id="@+id/helpid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/ssrl_desc"
                            android:maxLines="2"
                            android:textSize="@dimen/successStoriesRowLay_textSize" />
                    </RelativeLayout>



                    <TextView
                        android:layout_marginTop="@dimen/button_margin_top"
                        android:id="@+id/tv_viewmore_succsstories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="goToFullViewSuccessStories"
                        android:text="@string/event_row_layout_viewmore"
                        android:textAlignment="textEnd"
                        android:textColor="@color/view_more"
                        android:textSize="@dimen/successStoriesRowLay_textSize" />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/item_divider1" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
