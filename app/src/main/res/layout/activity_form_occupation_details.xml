    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".matrimony.FormOccupationDetailsActivity">

    <include
        android:id="@id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layout_bottom_margin"
            android:orientation="vertical">

            <!--    <TextView
                    android:id="@+id/frm_occupatnon_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Occupation Details"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"
                     />
-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/form_inner_layout_margin"
                android:orientation="horizontal"
                android:weightSum="1">
                <!--
                                    <TextView
                                        android:id="@+id/frm_ocuption_tv_cccupation"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="10dp"
                                        android:layout_weight=".5"
                                        android:text="Occupation :-"
                                         />-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/frm_ocuption_spr_cccupation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:hint="@string/Occupation"
                        android:inputType="textCapWords"

                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/form_inner_layout_margin"
                android:orientation="horizontal"
                android:weightSum="1">

                <!--  <TextView
                      android:id="@+id/frm_ocuption_tv_indusry"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_margin="10dp"
                      android:layout_weight=".5"
                      android:text="Industry :-"
                       />-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/frm_ocuption_spr_indstry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:hint="@string/Industry"
                        android:inputType="textCapWords" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/form_inner_layout_margin"
                android:orientation="horizontal"
                android:weightSum="1">
                <!--
                                    <TextView
                                        android:id="@+id/frm_ocuption_tv_bsnsempat"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="10dp"
                                        android:layout_weight=".5"
                                        android:text="Business Employee At :-"
                                         />-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/frm_ocuption_et_bsnsempat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:hint="@string/WorkField"
                        android:inputType="textCapWords" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/frm_ocuption_tv_psnlanulincome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/form_spinner_layout_margin_top"
                android:textSize="@dimen/form_tv_size"
                android:layout_marginLeft="@dimen/form_spinner_label_mar_left"
                android:textColor="@color/black"
                android:text="Personal Annual Income(In LPA)"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/form_spinner_layout_margin_top"
                android:orientation="horizontal"
                >


                <Spinner
                    android:id="@+id/frm_ocuption_et_psnlanulincome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/form_spinner_layout_margin_top"
                    android:layout_marginBottom="@dimen/form_spinner_layout_margin_bottom"
                    android:entries="@array/income"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/form_inner_layout_margin"
                android:gravity="center"
                android:orientation="horizontal">

                <!--  <ImageView
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:layout_gravity="start"
                      android:layout_marginRight="10dp"
                      android:layout_marginTop="10dp"
                      android:layout_weight=".5"
                      android:onClick="goToFormEducationDetails"
                      android:src="@drawable/arrow_left_bold_circle_outline" />-->

                <Button
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/button_margin_top"
                    android:textSize="@dimen/text_size"
                    android:textAllCaps="false"
                    android:layout_marginBottom="@dimen/button_margin_bottom"
                    android:background="@color/circleArrowButton"
                    android:onClick="goToFamillyDetails"
                    android:text="@string/save_next"
                    android:textColor="@color/buttonTextColor"
              />
                <!--<Button
                    android:id="@+id/bnsaveupdate"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_weight=".5"
                    android:textColor="#fff"
                    
                    android:background="@color/circleArrowButton"
                    android:onClick="goToFormContactInformation"
                    android:text="save update"
                    android:visibility="gone"/>-->
            </LinearLayout>
        </LinearLayout>

